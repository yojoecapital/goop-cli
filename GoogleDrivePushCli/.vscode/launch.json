    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch with Arguments",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/bin/Debug/net8.0/linux-x64/goop.dll",
            "args": [
                "goop",
                "push",
                "--yes",
                "--verbose"
            ],
            "cwd": "/home/yojoe/.config/goop-cli",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "justMyCode": false
        }
    ]
}